{
    "env": {
      "es2020": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "linebreak-style": 0,
      "class-methods-use-this": "off",
      "camelcase": "off",
      "@typescript-eslint/no-unused-vars": ["error", {
        "argsIgnorePattern": "_"
      }],
      // "@typescript-eslint/interface-name-prefix": ["error", { "preixWithI": "always" }],
      "no-useless-constructor": "off",
	   	"import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
      ],
      "prettier/prettier": ["error", {
      "endOfLine":"auto"
     }]
	  },
	  "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  } 
}